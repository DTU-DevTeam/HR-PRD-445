@model List<Department_SqlServer>;
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@{
    //ViewBag.Title = "HR";
    ViewBag.CurrentUrl = "hr/department";

}

<form asp-controller="hr" asp-action="Department" method="get">

    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover table-bordered align-middle text-center">
            <thead class="table-dark text-center">
                <tr>
                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Department_SqlServer.DepartmentId) },
                    { "DisplayName", "Department ID" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Department_SqlServer.DepartmentName) },
                    { "DisplayName", "Department Name" },
                    })

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepartmentId</td>
                        <td>@item.DepartmentName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>


<style>
    th, td {
        text-align: center;
        vertical-align: middle !important;
        white-space: nowrap;
    }

    
    a {
        color: white;
    }


</style>

