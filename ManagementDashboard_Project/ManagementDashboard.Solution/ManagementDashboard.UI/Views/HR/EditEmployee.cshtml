@using ManagementDashboard.Core.Dto;
@using ManagementDashboard.Core.Domain.Entities;
@model EditEmployee_Request;

@{
    List<Department_SqlServer> departments = ViewBag.Departments;
    Employee_SqlServer employee = ViewBag.Employees;
}

<p1>Them Nv</p1>
<form asp-controller="HR" asp-action="EditEmployee" method="post">
    <div class="form-group">

        <label asp-for="EmployeeID" class="control-label">Employee ID: @employee.EmployeeID</label>
        <input asp-for="EmployeeID" type="hidden" class="form-control" value="@employee.EmployeeID" />

        <br />

        <label asp-for="ApplicantID" class="control-label">Application ID:</label>
        <input asp-for="ApplicantID" type="text" class="form-control" value=" " />

        <br />

        <label asp-for="DepartmentID" class="control-label">Department Name: </label>
        <select asp-for="DepartmentID" class="form-control" oninvalid="">
            @foreach (var department in departments)
            {
                <option value="@department.DepartmentId" selected="@(department.DepartmentId == employee.DepartmentID)">
                    @department.DepartmentName
                </option>
            }

        </select>

        <br />

        <label asp-for="HireDate" class="control-label">Hired Date: </label>
        <input asp-for="HireDate" type="date" class="form-control" value="@employee.HireDate.ToString("yyyy-MM-dd")" />

        <br />

        <label asp-for="Salary" class="control-label">Salary: </label>
        <input asp-for="Salary" type="number" class="form-control" value="" />

        <br />

        <button type="submit" class="btn btn-primary mt-3">Chỉnh sửa nhân viên</button>
    </div>
</form>
