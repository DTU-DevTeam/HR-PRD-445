@model List<Salary_MySQL>;
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

@{
    ViewBag.CurrentUrl = "payroll/salaries";
}

<form asp-controller="payroll" asp-action="Salaries" method="get">
    <div class="table-responsive">
        <table class="table table table-striped table-hover table-bordered align-middle text-center">
            <thead class="table-dark text-center">
                <tr>
                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.SalaryID) },
                    { "DisplayName", "Salary ID" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.EmployeeID) },
                    { "DisplayName", "Employee ID" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.SalaryMonth) },
                    { "DisplayName", "Salary Month" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.BaseSalary) },
                    { "DisplayName", "Base Salary" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.Bonus) },
                    { "DisplayName", "Bonus" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.Deductions) },
                    { "DisplayName", "Deductions" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.NetSalary) },
                    { "DisplayName", "NetSalary" },
                    })

                    @await Html.PartialAsync("_GridColumnHeader", new ViewDataDictionary(ViewData) {
                    { "ColumnName", nameof(Salary_MySQL.CreatedAt) },
                    { "DisplayName", "Created At" },
                    })
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SalaryID</td>
                        <td>@item.EmployeeID</td>
                        <td>@item.SalaryMonth.ToString("dd/MM/yyyy")</td>
                        <td>@item.BaseSalary</td>
                        <th>@item.Bonus</th>
                        <th>@item.Deductions</th>
                        <th>@item.NetSalary</th>
                        <th>@item.CreatedAt.ToString("dd/MM/yyyy")</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>

<style>
    a {
        color: white;
    }
</style>

